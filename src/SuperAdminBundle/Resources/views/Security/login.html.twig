{% extends "SuperAdminBundle::layout.html.twig" %}

{% block body %}

    {# S'il y a une erreur, on l'affiche dans un joli cadre #}
    {% if error %}
        <div class="alert alert-danger">{{ error.message }}</div>
    {% endif %}

    {# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
    <form action="{{ path('superadmin_login_check') }}" method="post">
        <input type="hidden" id="username" name="_username" value="{{ superadmin_login }}" />

        <label for="password">Mot de passe superadmin :</label>
        <input type="password" id="password" name="_password" value="{{ last_username }}" />

        <input type="submit" value="Connexion" />
    </form>

{% endblock %}